---
import { REFERENCES } from "../../consts/referencias";
---
<section id="referencias" class="w-full flex justify-center items-center py-16 bg-white">
  <div class="relative w-full overflow-hidden">
    <div class="carousel-track flex items-center gap-12 animate-marquee">
      {REFERENCES.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={name}
          class="flex-shrink-0 px-8 py-8"
        >
          {image.logo && <image.logo class="h-20 w-auto drop-shadow-lg" />}
        </a>
      ))}
      {REFERENCES.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={name + '-clone'}
          class="flex-shrink-0 px-8 py-8"
        >
          {image.logo && <image.logo class="h-20 w-auto drop-shadow-lg" />}
        </a>
      ))}
    </div>
  </div>
</section>

<style>
.carousel-track {
  width: max-content;
  display: flex;
  align-items: center;
  gap: 3rem;
  will-change: transform;
}
@keyframes marquee {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
.animate-marquee {
  animation: marquee 30s linear infinite;
}
</style>