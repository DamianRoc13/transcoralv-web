---
import { REFERENCES } from "../../consts/referencias";

const firstRow = REFERENCES.slice(0, 6);
const secondRow = REFERENCES.slice(6);
---
<section id="referencias">
  <div class="grid grid-cols-7 gap-2">
    {
      firstRow.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="size-20 hover:scale-125 transition flex justify-center items-center"
          aria-label={name}
        >
          {image.logo && <image.logo class="h-20 w-auto" />}
        </a>
      ))
    }
  </div>
  <div class="grid grid-cols-9 gap-2">
    {
      secondRow.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="size-20 hover:scale-125 transition flex justify-center items-center"
          aria-label={name}
        >
          {image.logo && <image.logo class="h-20 w-auto" />}
        </a>
      ))
    }
  </div>
</section>